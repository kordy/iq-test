@import '../../node_modules/nib'

global-reset()

body
  font-size 13px;
  line-height 1.3;

body, input, textarea
  font-family 'Open Sans', Arial, sans-serif

body, html, #app, .MainPage
  height 100%

input, textarea
  -webkit-appearance none

.h1
  font-size 22px
  margin-bottom 20px

.h2
  font-size 16px
  margin-bottom 15px

.hidden-container
  position relative
  overflow hidden
  height 0

.MainPage
  padding 30px 30px 100px 30px
  display flex
  flex-direction column
  justify-content space-between
  box-sizing border-box
  &__logo
    text-align center
    margin-bottom 60px

